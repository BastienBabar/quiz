%section#contact
  .container
    .row
      .col-lg-12.text-center
        %h2= t('contact')
        %hr.star-primary
    .row
      .col-lg-8.col-lg-offset-2
        .panel.panel-danger#confirm_contact
          .panel-heading
            .panel-title#contact_success
          %ul.list-group#contact_errors
        =form_tag '/contact', method: :post, remote: true, id: 'contact_form' do
          .row.control-group
            .form-group.col-xs-12.floating-label-form-group.controls
              =label_tag 'name', 'Name'
              =text_field_tag 'name', nil, placeholder: "Name", class: 'form-control',
                required: "required", "data-validation-required-message" => t('contact_enter_name')
          .row.control-group
            .form-group.col-xs-12.floating-label-form-group.controls
              =label_tag 'email', 'Email Address'
              =text_field_tag 'email', nil, placeholder: "Email Address", class: 'form-control',
                required: true, "data-validation-required-message" => t('contact_enter_email')
          .row.control-group
            .form-group.col-xs-12.floating-label-form-group.controls
              =label_tag 'message', 'Message'
              =text_area_tag 'message', nil, placeholder: "Message", class: 'form-control',
                required: true, "data-validation-required-message" => t('contact_enter_message'), rows: 5
          .row
            .form-group.col-xs-12
              =submit_tag "Send", class: 'btn btn-success btn-lg'
    .row
      %ul.list-inline.text-center
        %li
          %a.btn-social-contact.btn-contact-outline{:href => "https://twitter.com/intent/follow?screen_name=BastienBARBE"}
            %i.fa.fa-twitter.fa-fw
        %li
          %a.btn-social-contact.btn-contact-outline{:href => "https://github.com/BastienBABAR"}
            %i.fa.fa-github.fa-fw
        %li
          %a.btn-social-contact.btn-contact-outline{:href => "https://www.linkedin.com/profile/view?id=371794916"}
            %i.fa.fa-linkedin.fa-fw
